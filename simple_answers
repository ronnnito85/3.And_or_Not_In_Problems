while True:

    string = input("Enter text: ")

    if "Hello" in string  or "hello" in string :
        print ("Hello there, good stranger!")
    elif "how are you?" in string:
        print("I am fine, thanks. How are you?")
    elif "feelings" in string:
        print("I am a machine. I have no feelings")
    elif "age" in string:
        print("I have no age. Only current timestamp")
    else:
        print("Sorry, I cannot understand you")
